<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="LinkedInLoginTests">

    <test name="Login Tests Chrome EN">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://us.linkedin.com/" />
        <classes>
            <class name="test.LinkedinLoginTest" />
        </classes>
    </test>

    <test name="Login Tests Chrome RU">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://ru.linkedin.com/" />
        <classes>
            <class name="test.LinkedinLoginTest" />
        </classes>
    </test>

    <test name="Login Tests Chrome DE">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://de.linkedin.com/" />
